<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/tvNameOfUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of User"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/black_circle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tvEmailofUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email of User"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/black_circle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tvPhoneofUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone of User"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:layout_marginTop="5dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/black_circle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tvPasswordofUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password of User"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/shareClick"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/share"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>



</LinearLayout>